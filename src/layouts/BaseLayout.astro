---
import Header from '@/components/Header.astro';
import Hero from '@/components/Hero.astro';
import Footer from '@/components/Footer.astro';
import '../styles/base.css';

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { pageTitle, robots } = Astro.props;
const robotsContent = !robots || robots.length === 0 ? "index, follow" : robots;
---
<html lang="en">
  <head>
    <!-- Google tag (gtag.js) -->
    <script type="text/partytown" async src="https://www.googletagmanager.com/gtag/js?id=G-9XV00FHBVL"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-9XV00FHBVL');
    </script>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="robots" content={robotsContent} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="msvalidate.01" content="B1436B6E10C38B2B46FE997215481B16" />
    <meta name="google-site-verification" content="ukmbve0y38c7dhv8s4T9pNS6fAwFXaLKraK57dVeCrc" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="canonical" href={canonicalURL} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible&display=swap"
      rel="stylesheet"
    />
    <link rel="alternate" type="application/rss+xml" title="James Snape &raquo; Feed" href="/rss.xml" />
    <script src="https://kit.fontawesome.com/788d72bc6c.js" crossorigin="anonymous"></script>
    <title>{pageTitle}</title>
  </head>
  <body class="min-h-screen">
    <div class="flex flex-col min-h-screen mx-auto">    
      <div class="sticky z-50 top-0 backdrop-filter backdrop-blur-xl bg-opacity-60">
        <Header />
      </div>
      <div class="">
        <Hero />
        <slot />
        <Footer />
      </div>
    </div>        
  </body>
</html>